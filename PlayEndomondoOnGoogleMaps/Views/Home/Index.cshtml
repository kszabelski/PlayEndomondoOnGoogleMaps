
    <div>
        <div>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <label for="file">Upload GPX from Endomondo:</label>
                <input type="file" name="file" id="file" style="display: inline-block"/> 
                <input type="submit" value="Upload" />
            }
            @if (!string.IsNullOrWhiteSpace(ViewBag.Coords))
            {
                <label>Zoom</label>
                <input type="number" value="13" id="inputZoom"/>
                <button id="btnCenter">Zoom & Center</button>
                <button id="btnDraw">Draw</button>
            }
        </div>
    </div>
    <div>
        <div style="width:1920px;height:1080px" id="map"></div>
    </div>
    @section scripts
    {
        <script>
            var coords = @ViewBag.Coords
        </script>

        <script src="~/Scripts/mapsite.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPKFVkC0S7zfQOPZ_LsopHcIcYH5vxC2g&callback=initMap" async defer></script>
    }